@model IEnumerable<MockProject.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div class="row">
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <span>Filter by role</span>
            <select name="filter">
                @{
                    var filter = ViewBag.Filter;
                    if (filter.Equals("0") )
                    {
                        <option selected="selected" value="0">All</option>
                        <option value="1">Admins</option>
                        <option value="2">Teachers</option>
                        <option value="3">Students</option>
                    }
                    if (filter.Equals("1"))
                    {
                        <option value="0">All</option>
                        <option selected="selected" value="1">Admins</option>
                        <option value="2">Teachers</option>
                        <option value="3">Students</option>
                    }
                    if (filter.Equals("2"))
                    {
                        <option value="0">All</option>
                        <option value="1">Admins</option>
                        <option selected="selected" value="2">Teachers</option>
                        <option value="3">Students</option>
                    }
                    if (filter.Equals("3"))
                    {
                        <option value="0">All</option>
                        <option value="1">Admins</option>
                        <option value="2">Teachers</option>
                        <option selected="selected" value="3">Students</option>
                    }
                }
                
            </select>
      
            <input name="search" placeholder="search by name..." value="@ViewBag.Search"/>
      
            <input type="submit" value="Submit"  class="btn btn-default" />
        </div>
        <a asp-action="Index">Back to Full List</a>
    </form>
    
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    <a asp-action="Index" asp-route-search="@ViewBag.search" asp-route-sort="@ViewBag.Name">@Html.DisplayNameFor(model => model.Name)</a>
                  
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthday)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    <a asp-action="Index" asp-route-search="@ViewBag.search" asp-route-sort="@ViewBag.Gender">@Html.DisplayNameFor(model => model.Gender)</a>
                   
                </th>
                <th>
               
                    <a asp-action="Index" asp-route-search="@ViewBag.search" asp-route-sort="@ViewBag.IsActive">@Html.DisplayNameFor(model => model.IsActive)</a>
                </th>
                @* <th> *@
                @*     @Html.DisplayNameFor(model => model.IsGraduated) *@
                @* </th> *@
                <th>
                    @Html.DisplayNameFor(model => model.Faculty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @if (item.Gender)
                    {
                        <p>Male</p> 
                    }
                    else
                    {
                        <p>Female</p> 
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                @* <td> *@
                @*     @Html.DisplayFor(modelItem => item.IsGraduated) *@
                @* </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.Faculty.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>

</div>
