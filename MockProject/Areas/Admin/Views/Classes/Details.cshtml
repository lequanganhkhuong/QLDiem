@model Class

@{
    ViewData["Title"] = "Details Classes";
    var listStudent = ViewBag.CC as IEnumerable<User>;
}

<h1>Details</h1>
<h4>Classes</h4>
<hr/>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-content">

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NameClass)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NameClass)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Year)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Year)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Faculty)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Faculty.Name)
                    </dd>

                </dl>
            </div>

            <div style="margin: 5px">
                 <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> 
                <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-content">
                <table id="listStudent" class="table">
                    <thead>
                    <tr>
                        <th>
                            Name Student
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Gender
                        </th>
                        <th> Faculty</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in listStudent)
                    {
                        <tr>
                            <td> @Html.DisplayFor(hihi => item.Name)</td>
                            <td> @Html.DisplayFor(hihi => item.Address)</td>
                            <td> @Html.Raw(item.Gender ? "Male" : "Famale")</td>
                            <td> @Html.DisplayFor(hihi => item.Faculty.Name)</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function() {

            $('#listStudent').DataTable({
                pageLength: 10
            });
        });
    </script>
}