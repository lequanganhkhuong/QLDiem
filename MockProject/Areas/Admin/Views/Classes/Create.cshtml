@model Class

@{
    ViewData["Title"] = "Create class";
}

<h1>Create</h1>
<h4>Class</h4>
<hr/>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-content">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="NameClass" class="control-label"></label>
                            <input asp-for="NameClass" class="form-control"/>
                            <span asp-validation-for="NameClass" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Year" class="control-label"></label>
                            <input type="number" asp-for="Year" class="form-control"/>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                       
                        <div class="form-group">
                            <label asp-for="FacultyId" class="control-label"></label>
                            <select style="display: none" asp-for="FacultyId" class="form-control" asp-items="ViewBag.FacultyId"></select>
                            <span asp-validation-for="FacultyId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-success"/>
                            <a asp-action="Index" class="btn btn-danger">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>

          
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}