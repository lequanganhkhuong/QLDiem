@model Schedule

@{
    ViewBag.Title = "Edit schedule";
    Layout = "_Layout";
}

<h1>Edit</h1>
<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-content">
                <div class="col-md-4">
                     <form asp-action="EditSchedule">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          <input type="hidden" asp-for="Id" />
                         <div class="form-group">
                             <label asp-for="SubjectId" class="control-label"></label>
                             <select style="display: none" asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                             <span asp-validation-for="SubjectId" class="text-danger"></span>
                         </div>
                         <div class="form-group">
                             <label asp-for="UserId" class="control-label"></label>
                             <select style="display: none" asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                             <span asp-validation-for="UserId" class="text-danger"></span>
                         </div>
                         <div class="form-group">
                             <label asp-for="SemesterId" class="control-label"></label>
                             <input readonly="readonly" asp-for="SemesterId" class="form-control" />
                             <span asp-validation-for="SemesterId" class="text-danger"></span>
                         </div>  
                          <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                    </label>
                                </div>
                          <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                     </form>
                       
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="AddSchedule" asp-route-id="@Model.SemesterId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
