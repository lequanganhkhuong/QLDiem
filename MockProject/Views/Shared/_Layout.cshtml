<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/client/css/adminlte.min.css"/>

    <!--admin lte 2-->
    <link rel="stylesheet" href="/client/css/_all-skins.min.css"/>
    <link rel="stylesheet" href="/client/css/AdminLTE.min.css"/>
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light border-bottom">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#">
                <i class="fas fa-bars"></i>
            </a>
        </li>
    </ul>

    <ul class="navbar-nav ml-8">
    @if (User.Identity.IsAuthenticated)
{
    <li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="hidden-xs">Hello @User.FindFirst("UserName").Value</span>
    </a>
    <ul class="dropdown-menu">
        <li class="user-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <a asp-controller="User" asp-action="Index" asp-route-id="@User.Identity.Name">Profile</a>
                </div>
                <div class="col-md-8 text-center">
                    <a asp-controller="User" asp-action="ChangePass" asp-route-id="@User.Identity.Name">Change PassWord</a>
                </div>

            </div>
        </li>
        <li class="user-footer text-center">
            <a asp-controller="Login" asp-action="Logout" class="btn btn-block">Sign out</a>
        </li>
    </ul>
    </li>
}
    </ul>


</nav>
<!-- /.navbar -->

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
<!-- Brand Logo -->
<a asp-controller="Home" asp-action="Index" class="brand-link">
    <span class="brand-text font-weight-light">.NET TEAM</span>
</a>
<!-- Sidebar -->
<div class="sidebar">
<!-- Sidebar user (optional) -->
<div class="user-panel mt-3 pb-3 mb-3 d-flex">

    <div class="info">
        <a class="d-block">
            @if (User.Identity.IsAuthenticated)
            {
                <p>Hello : @User.FindFirst("UserName").Value</p>
            }
        </a>
                </div>
            </div>
        
            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                    with font-awesome or any other icon font library -->

                    <li class="nav-item has-treeview">
                        @if (User.IsInRole("student"))
                        {
                            <a href="#" class="nav-link">
                                <i class="fas fa-align-justify"></i>
                                <p>
                                    Transcipt
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="../../Students" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Transcrips</p>
                                    </a>
                                </li>
                            </ul>
                        }
                    </li>
                    <li class="nav-item has-treeview">
                        @if (User.IsInRole("teacher"))
                        {
                            <a href="#" class="nav-link">
                                <i class="fas fa-align-justify"></i>
                                <p>
                                    Schedule        
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="../../Teacher" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Transcrips</p>
                                    </a>
                                </li>
                            </ul>
                        }
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        @RenderBody()
    </div>

<footer class="main-footer">
    <div class="float-right d-none d-sm-block">
        <b>Version</b> 3.0.0-beta.1
    </div>
    Member Intern .NET : <strong> Nguyễn Tâm, Nguyễn Kim Hùng</strong>
    </footer>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

<!-- jQuery -->
<script src="/client/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="/client/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- FastClick -->
<script src="/client/fastclick/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="/client/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="/client/js/demo.js"></script>

@RenderSection("Scripts", false)

</body>
</html>
