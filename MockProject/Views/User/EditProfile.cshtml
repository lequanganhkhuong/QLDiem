@model MockProject.Models.User

@{
    ViewBag.Title = "Edit Profile";
    Layout = "_Layout";
}


<div class="text-center">
    <h1>Edit Profile</h1>
</div>

<div class="container-fluid">
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">Edit @Model.Name</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-widget="remove">
                    <i class="fas fa-remove"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form asp-action="EditProfile" >
                <div class="row">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id"/>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Name</label>
                            <input disabled asp-for="Name" class="form-control"/>
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Gender</label>
                            <div class="form-control"> @Html.Raw(Model.Gender ? "Male" : "Famale")</div>
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Birth Day</label>
                            <input asp-for="Birthday" class="form-control"/>
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address</label>
                            <input asp-for="Address" class="form-control"/>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <input type="submit" value="Save" class="btn btn-success"/>
                <a asp-controller="Home" asp-action="Index"  class="btn btn-info">Cancel</a>

            </form>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Design by Kai member team intern .NET
        </div>
    </div>
    <!-- /.card -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 